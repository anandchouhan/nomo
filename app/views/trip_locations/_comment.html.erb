<div class="row">
  <div class="col-sm-12 comment">
    <% if user_signed_in? %>
      <% if current_user.name == comment.user.name %>
        <div class="message-user">
          <%= link_to comment.user do %>
            <p><%= comment.user.name %></p>
          <% end %>
        </div>
        <div class="message-details" data-id="<%= comment.user.id %>">
          <div class="message-body">
            <div hidden class="comment-likes">
              <span class="number"><small><%= comment.votes_for.size %></small></span>
              <span class="h-icn">
                <%= link_to (current_user.liked?(comment) ? dislike_comment_path(comment) : like_comment_path(comment) ), method: :put, remote: true do %>
                  <i class="fa fa-heart<%= ' red' if current_user.liked? comment %>"></i>
                <% end %>
              </span>
            </div>
            <div class="message-content">
              <p><%= comment.body %></p>
            </div>
          </div>
          <div class="message-time">
            <small><%= comment.created_at.strftime("%H:%M") %></small>
          </div>
        </div>
      <% else %>
        <div class="message-user message-user--alt">
          <%= link_to comment.user do %>
            <p><%= comment.user.name %></p>
          <% end %>
        </div>
        <div class="message-details message-details--alt" data-id="<%= comment.user.id %>">
          <div class="message-body message-body--alt">
            <div hidden class="comment-likes">
              <span class="number"><small><%= comment.votes_for.size %></small></span>
              <span class="h-icn">
                <%= link_to (current_user.liked?(comment) ? dislike_comment_path(comment) : like_comment_path(comment) ), method: :put, remote: true do %>
                  <i class="fa fa-heart<%= ' red' if current_user.liked? comment %>"></i>
                <% end %>
              </span>
            </div>
            <div class="message-content">
              <p><%= comment.body %></p>
            </div>
          </div>
          <div class="message-time">
            <small><%= comment.created_at.strftime("%H:%M") %></small>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="message-user message-user--alt">
        <%= link_to comment.user do %>
          <p><%= comment.user.name %></p>
        <% end %>
      </div>
      <div class="message-details message-details--alt" data-id="<%= comment.user.id %>">
        <div class="message-body message-body--alt">
          <div hidden class="comment-likes">
            <span class="number"><small><%= comment.votes_for.size %></small></span>
          </div>
          <div class="message-content">
            <p><%= comment.body %></p>
          </div>
        </div>
        <div class="message-time">
          <small><%= comment.created_at.strftime("%H:%M") %></small>
        </div>
      </div>
    <% end %>
  </div>
</div>
