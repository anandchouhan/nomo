<div class="itinerary-item row">

  <div class="col-2 date-label">
    <p><%= accommodation.arriving_at.strftime("%d") %></p>
    <p><%= accommodation.arriving_at.strftime("%B") %></p>
  </div>

  <div class="col-1 d-flex align-items-center">
    <p class="dates-separator">-</p>
  </div>

  <div class="col-2 date-label">
    <p><%= accommodation.departing_at.strftime("%d") %></p>
    <p><%= accommodation.departing_at.strftime("%B") %></p>
  </div>
  
  <div class="col-7">
    <% if @trip.user == current_user %>
      <span class="float-right">
        <%= link_to edit_trip_location_accommodation_path(@trip_location, accommodation), remote: true, class: "mr-10 float-left" do %>
          <i class="fa fa-pencil"></i>
        <% end %>

        <%= link_to trip_location_accommodation_path(@trip_location, accommodation), method: :delete, class: "float-right" do %>
          <i class="fa fa-trash"></i>
        <% end %>
      </span>
    <% end %>

    <h3 class="block-name">
      Staying in <%= accommodation.name %>
    </h3>

    <button class="fake-link" data-toggle="collapse" data-target="#accommodation-details-<%= index %>">See accommodation details</button>

    <div id="accommodation-details-<%= index %>" class="collapse">
      <div class="pv-10">
        <p class="fwb">Details</p>

        <p>Check In Date: <%= accommodation.arriving_at.strftime("%m/%d/%y") %></p>

        <% if accommodation.arriving_at_time %>
          <p>Check In Time: <%= accommodation.arriving_at_time %></p>
        <% end %>

        <p>Check Out Date: <%= accommodation.departing_at.strftime("%m/%d/%y") %></p>

        <% if accommodation.departing_at_time %>
          <p>Check Out Time: <%= accommodation.departing_at_time %></p>
        <% end %>

        <p>
          <% unless accommodation.reservation_number.nil? %>
            <%= accommodation.reservation_number %> <br>
          <% end %>

          <% unless accommodation.location.nil? %>
            <%= accommodation.location.name %> <br>
            <%= accommodation.location.formatted_address %> <br>
          <% end %>

          <% unless accommodation.description.nil? %>
            Extra information: <%= accommodation.description %> <br>
          <% end %>
        </p>

      </div>
    </div>
  </div>

</div>