<div id="user-settings" class="main-content">
  <div class="col-sm-8 offset-sm-2">
    <div class="modal-header">
      <h4 class="modal-title" id="myModalLabel">Settings</h4>
    </div>

    <div class="modal-body modal-body-2 pl-0 pt-0">
      <div class="container-fluid pl-0">
        <div class="row">
          <div class="settings-group-selector-container">
            <div>
              <div class="settings-group-option selected-settings-group">
                <a href="#" onclick="displayUserSettingsForm(this);" class="light-font" data-attached-element="edit-profile"><i class="fa fa-user-circle-o" aria-hidden="true"></i> <span>Profile</span></a>
              </div>
              <div class="settings-group-option">
                <a href="#" onclick="displayUserSettingsForm(this);" class="light-font" data-attached-element="notifications-settings"><i class="fa fa-bell" aria-hidden="true"></i> <span>Notifications</span></a>
              </div>
            </div>
          </div>

          <div class="settings-group" id="edit-profile">
            <%= render partial: 'edit_profile' %>
          </div>

          <div class="display-none settings-group" id="notifications-settings">
            <%= render partial: "user_settings/notifications", locals: { user: @user } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
