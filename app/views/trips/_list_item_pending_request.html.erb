<li class="list-group-item d-flex justify-content-between">
  <% if current_user == sender %>
    <%= recipient.name %>
    <%= link_to decline_trip_invitation_request_trip_path(trip, trip_invitation_request), data: { disable_with: "" }, method: :delete do %>
      <i class="fa fa-user-times"></i>
    <% end %>
  <% elsif trip.user == current_user %>
    <%= (trip_invitation_request.recipient || trip_invitation_request.sender) == current_user ? sender.name : recipient.name %>
    <%= link_to decline_trip_invitation_request_trip_path(trip, trip_invitation_request), data: { disable_with: "" }, method: :delete do %>
      <i class="fa fa-user-times"></i>
    <% end %>
    <%= link_to accept_invitation_to_trip_path(trip, sender,status: "accepted"), data: { disable_with: "" }, method: :post do %>
      <i class="fa fa-user-plus"></i>
    <% end %>
  <% end %>
</li>