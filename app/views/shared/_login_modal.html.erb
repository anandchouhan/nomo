<div class="modal userLogin waitlist-modal" id="loginModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body text-center pv-40">
        <%= image_tag("https://s3.us-east-2.amazonaws.com/nomofomo-assets/static/images/full-logo.svg", alt: "Nomo FOMO - Your ultimate social travel platform", class: "login-modal-logo", height: "100") %>

        <div class="facebook-signin-container">
          <a class="sign-in-facebook" href="<%= user_facebook_omniauth_authorize_path(referred_by: params[:referred_by]) %>">
            <i class="fa fa-facebook-f"></i>
            <span>Sign In With Facebook</span>
          </a>
        </div>
        <div class="strike">
         <span>OR</span>
        </div>
        <%= form_for(:user, url: session_path(:user), html: { class: "login-form 666" }) do |f| %>
          <div class="field">
            <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control custom" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum and case sensitive)</em><br />
            <% end %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control custom" %>
          </div>

          <div class="actions">
            <%= f.submit 'Sign In', class: 'btn btn-info login-button' %>
          </div>
        <% end %>
        <div class="extra-actions">
          <%= link_to "Sign Up", new_user_registration_path, class: "one" %>
          <span class="separator">|</span>
          <%= link_to("Forgot Password?", new_user_password_path, id: "forget-password", class: "one") %>
        </div>
      </div>
    </div>
  </div>
</div>
