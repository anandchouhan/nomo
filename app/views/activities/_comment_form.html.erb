<%= form_with(model: [activity, Comment.new], local: false) do |f| %>
  <div class="container-fluid pt-3 pb-3 pl-2 pr-2">
    <div class="row">
      <div class="col-sm-9 pr-0">
        <%= f.text_area :body, id: "new_comment_body", class: "comment-textarea w-100", data: { "activity-id": activity.id }, placeholder: "Comment on this...", maxlength: "700", required: true %>
      </div>
      <div class="col-sm-3 pl-1">
        <%= f.submit "Comment", class: "sub-comment w-100" %>
      </div>
    </div>
  </div>
<% end %>
