<%= form_with model: travel, url: [@trip_location, travel] do |f| %>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :name, "Name" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :name, placeholder: "eg. Flight to New York", class: 'form-control', required: true, autocomplete: 'off' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :reservation_number, "Reservation Number" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :reservation_number, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :airline, "Airline" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :airline, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :flight_number, "Flight Number" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :flight_number, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :description, "Extra Information" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_area :description, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <h3>Departure</h3>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :departure_location, "Origin City" %>
    </div>
    
    <div class="col-sm-8">
      <div class="container-autocomplete">
        <input type="text" class="form-control trip-input-text autocomplete-places" autocomplete="off" placeholder="Enter a location">
        <input type="hidden" name="travel[departure_location_id]">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :departure_airport, "Airport of Departure" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :departure_airport, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :departing_at, "Departure Date" %>
    </div>
    
    <div class="col-sm-8">
      <input class="departing-at-travel form-control" autocomplete="off" type="text" data-edit="false" required readonly>
      <input type="hidden" class="travel-departing-at" name="travel[departing_at]" data-edit="false">
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :departing_at_time, "Departure Time" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :departing_at_time, class: 'form-control', autocomplete: 'off', placeholder: "E.g. 10:00 a.m. or 15:43" %>
    </div>
  </div>

  <h3>Arrival</h3>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :arrival_location_id, "City of Arrival" %>
    </div>
    
    <div class="col-sm-8">
      <div class="container-autocomplete">
        <input type="text" class="form-control trip-input-text autocomplete-places" autocomplete="off" placeholder="Enter a location">
        <input type="hidden" name="travel[arrival_location_id]">
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :arrival_airport, "Airport of Arrival" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :arrival_airport, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :arriving_at, "Arrival Date" %>
    </div>
    
    <div class="col-sm-8">
      <input class="arriving-at-travel form-control" autocomplete="off" type="text" data-edit="false" required readonly>
      <input type="hidden" class="travel-arriving-at" name="travel[arriving_at]" data-edit="false">
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <%= f.label :arriving_at_time, "Arrival Time" %>
    </div>
    
    <div class="col-sm-8">
      <%= f.text_field :arriving_at_time, class: 'form-control', autocomplete: 'off', placeholder: "E.g. 10:00 a.m. or 15:43" %>
    </div>
  </div>

  <div class="tar">
    <%= f.submit "Add Travel Detail", class: "btn btn-primary" %>
  </div>
                  
<% end %>