<div class="static-area container-fluid">
  <div class="row justify-content-md-center">
    <div class="col-sm-4 text-center align-middle">
      <h2>Sign In</h2>

      <div class="facebook-signin-container">
        <a class="sign-in-facebook" href="<%= user_facebook_omniauth_authorize_path %>">
          <i class="fab fa-facebook-f"></i>
          <span>Sign In With Facebook</span>
        </a>
      </div>

      <div class="strike">
       <span>OR</span>
      </div>

      <%= form_for(:user, url: session_path(:user), html: { class: "login-form" }) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control custom" %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum and case sensitive)</em><br />
          <% end %>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control custom" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <span>Remember Me</span>
            <% end %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit 'Sign In', class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <div class="extra-actions">
        <%= link_to "Sign Up", new_user_registration_path, { class: "nav-link" } %>
        <%= link_to("Forgot Password?", new_user_password_path, id: "forget-password", class: "one") %>
      </div>
    </div>
  </div>
</div>
